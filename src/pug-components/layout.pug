doctype html
html(lang="ru-Ru")
    head
        meta(charset = 'utf-8')
        meta(name='viewport', content="initial-scale=1.0, width=device-width")
        block title
            -let title = "Название"
            -let page = ''
        title #{title + (page.length ? " - " : "") + (typeof page === 'string' ? page : page[page.length - 1])}
        link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:400,400i,600,600i|Oswald:300,400,500,600,700&display=swap&subset=cyrillic,cyrillic-ext")
        link(rel="stylesheet" href="css/concat-css-libs.css")
        link(rel="stylesheet" href="css/concat-css.css")
    body
        .popbox_main_content
            .top-section
                include header
                include first-section

            block content
                include about-section
                include menu-section
                include gallery-section
                include map-contact-section

            block footer
                include footer

        .overlay
        include popbox

        script(src="https://api-maps.yandex.ru/2.1/?apikey=c599d252-3a6f-4b64-872c-a529f6263f40&lang=ru_RU")
        script(src="js/concat-js-libs.js")
        script(src="js/common.js")
