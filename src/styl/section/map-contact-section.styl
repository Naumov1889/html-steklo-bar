@import "../common.styl"

.map-contact-section {
  position: relative;
  height 700px //864px
  background-color: #f4f0e2

  #map-container {
    position: relative;
    //z-index: 1
    width: 100%
    height: 100%

    &:before {
      content ''
      position: absolute;
      z-index 2
      top: 0
      width: 100%
      height: 225px
      background: url("../../img/2-layers.png") top
      transform rotate(180deg)
    }
  }

  &__box.box {
    position: absolute;
    max-width: 444px
    width: 92%
    //height: 400px
    //z-index 1
    top: 50%
    transform translateY(-50%)

    .box__content {
      display: flex;
      flex-direction column
      justify-content center
      align-items center
      padding: 10px 20px 10px 20px
    }

    .title_h2 {
      padding-bottom: 14px
    }
  }

  .contact {
    text-align: center
    margin: 0 0 14px 0

    &__text {
      color #505050
      font-family $oswaldFont
      font-size 28px
      font-weight 700
      font-style italic
    }

    &_email {
      .contact__text {
        font-size: 26px
      }

      .icon {
        margin-top: 4px
      }
    }

    &_address {
      line-height: 28px;

      .icon {
        margin-top 2px
      }
    }
  }
}


@media (max-width: 800px) {
  .map-contact-section {
    height: 600px

    &__box.box {
      z-index 3
      top 40px
      left: 50%
      transform translateX(-50%)
      .box__content {
        padding-bottom 5px
      }
    }

    .contact {
      text-align: center

      .icon {
        transform scale(0.76)
      }

      &__text {
        padding-left: 6px
        font-size: 22px
      }

      &_email {
        .contact__text {
          font-size: 20px
        }

        .icon {
          margin-top: 2px
        }
      }

      &_address {
        line-height: 25px;

        .icon {
          margin-top 2px
        }
      }
    }
  }
}