@import "../common.styl"

.about-section {
  padding: 80px 0 110px 0
  background: #fff url("../../img/bg-about-section.jpg") center
  background-size: cover;

  .title_h2 {
    margin-bottom: 24px;
  }

  &__text {
    padding: 0 80px 40px 80px
    color #515151
    line-height 27px
    text-align: center
  }

  &-feature-list {
    display: flex;
    flex-wrap wrap
    justify-content center
    margin: -15px
  }

  &-feature {
    margin: 15px
    width 255px
    height 300px

    &:nth-child(1) {
      .about-section-feature__img {
        left: Calc(50% + 6px)
      }
    }

    &:nth-child(2) {
      .about-section-feature__img {
        left: Calc(50% - 5px)
      }
    }

    &__img {
      position: absolute;
      z-index 3
      bottom: 90px
      left: 50%
      transform: translate(-50%, 0)
    }

    &__text {
      position: relative;
      z-index 3
      padding-top: 204px
      color #444444
      font-family $oswaldFont
      font-size 24px
      line-height 29px
      text-align: center
    }

    &:hover {
      .icon-container_in-corner {
        display: block;
      }
    }

    .icon-container_in-corner {
      display: none
      width 28px
      height 31px
      box-shadow 0 20px 35px rgba(0, 0, 0, 0.05)
      border-radius 2px 10px 2px 2px
      background-color #ffffff
      background-image linear-gradient(to top, #f9b338 0%, #ffc152 100%)

      .icon {
        position: absolute
        top 8px
        right 10px
      }
    }
  }
}

@media (max-width: 1050px) {
  .about-section {
    .icon-container_in-corner {
      display: block;
    }
  }
}

@media (max-width: 750px) {
  .about-section {
    padding: 50px 0 60px 0

    .title_h2 {
      margin-bottom: 14px;
    }

    &__text {
      padding: 0 0 50px 0

    }
  }
}