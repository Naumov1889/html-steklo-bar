@import "../common.styl"

.first-section {

  &__first-row {
    display: flex;
    justify-content space-between
  }

  &__contact-address {
    .contact__text {
      font-family $oswaldFont
      font-size 22px
      line-height 28px
      letter-spacing 0.55px
    }
  }

  &__contact-phone {
    .contact__text {
      font-family $oswaldFont
      font-size 30px
      font-weight 700
    }
  }

  &__phone-callback-grid {
    display: flex;
    flex-direction column
    align-items flex-end

    a {
      font-size: 15px
    }
  }

  &__text {
    display: flex;
    flex-direction column
    font-style italic
    font-family: $oswaldFont;
    text-align: center
  }

  &__title {
    display: flex;
    flex-direction column
    font-size: 55px
    line-height 80px
    font-weight: 800
  }

  &__subtitle {
    font-size 35px
    font-weight 300
    line-height 70px
    color #cfcfcf
  }

  &__btn {
    margin: 0 auto
  }
}

@media (max-width: 550px) {
    .first-section {
      &__first-row {
        display: none
      }
    }
}