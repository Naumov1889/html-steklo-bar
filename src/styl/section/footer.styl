.footer {
  position: relative;
  height: 110px

  &:before {
    content ''
    position: absolute;
    z-index 2
    bottom: 0
    width: 100%
    height: 210px
    background: url("../../img/bg-clouds-1.png") top no-repeat
    background-size: cover;
  }

  .container {
    position: relative;
    z-index 3
    display: flex;
    justify-content space-between
    align-items center
  }

  &__policy {
    color #2e2e2e
    font-size 17px
    letter-spacing 0.49px
  }
}

.author {
  width: 154px;
  text-align: right;
  color #141414
  font-size 17px
  font-weight 300
  line-height 20px
  letter-spacing 0.42px

  a {
    color #008ea9
    text-decoration underline

    &:hover {
      text-decoration: none
    }
  }
}

@media (max-width: 800px) {
  .footer {
    padding-bottom: 50px;
    height: auto
    &:before {
      bottom: 140px
    }
    .container {
      flex-direction column
      align-items center
    }

    &__policy {
      margin: 26px 0
      &:before {
        bottom: -3px
      }
    }
    .author {
      width: 100%
      text-align: center
    }
  }
}