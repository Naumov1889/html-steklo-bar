.checkbox {
  padding-left: 30px
  margin: 0 auto
  width: max-content
  text-align: center

  .checkbox__text {
    color #4f4f4f
    font-family "Open Sans"
    font-size 15px
    font-weight 300

    a {
      display: block
      text-decoration underline

      &:hover {
        text-decoration: none
      }
    }
  }

  &__checkmark {
    top: 8px
    width 20px
    height 20px
    border-radius 4px
    background-color #ffd856
    background-image linear-gradient(to top, #f9b337 0%, #ffc153 100%)

    &:after {
      display: block
      top: 50%
      left: 50%
      transform: translate(-50%, -50%)
      width: 10px
      height: 8px
      border: none
      background-image url("../../img/icon-tick.png")

      opacity: 0
      transition: ease-in-out .1s
    }
  }

  &:hover .checkbox__input ~ .checkbox__checkmark {
    background-color: #b9b9b9
  }

  &__input:checked ~ .checkbox__checkmark {
    background-color: #b9b9b9
  }

  & .checkbox__input:checked ~ .checkbox__checkmark {
    background-color: #b9b9b9

    &:after {
      opacity: 1
    }
  }
}