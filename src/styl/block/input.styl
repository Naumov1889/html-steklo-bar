.input {
  width: 100%
  height 85px
  padding: 0 66px 0 28px
  box-shadow inset -3px 2px 8px rgba(0, 0, 0, 0.06)
  border-radius 10px
  background-color #fafafa

  font-size: 19px
  color #020202
}

::-webkit-input-placeholder { /* Chrome/Opera/Safari */
  color #2e1200
}

::-moz-placeholder { /* Firefox 19+ */
  color #2e1200
}

:-ms-input-placeholder { /* IE 10+ */
  color #2e1200
}

:-moz-placeholder { /* Firefox 18- */
  color #2e1200
}

.input-container {
  position: relative;

  .icon {
    position: absolute;
    top 50%
    transform translateY(-50%)
    right 28px

    &_user {
      right 31px
    }

    &_phone {
      right 28px
    }
  }
}

.input-label {
  margin: 12px 0 8px 0
  display: block;
  font-size: 17px
  color #717171
  text-align: left
}