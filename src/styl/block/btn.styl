@import "../common.styl"

.btn {
  cursor pointer
  display: flex;
  justify-content center
  align-items center
  width: max-content
  max-width 100%
  height: 90px
  padding: 20px 46px 20px 46px
  box-shadow 0 10px 18px rgba(249, 179, 56, 0.25), 0 5px 0 #df9a1f
  border-radius 10px
  background-image linear-gradient(to top, #f9b337 0%, #ffc153 100%), linear-gradient(to top, #fa971e 0%, #fcb812 100%)

  white-space nowrap
  color #2e1200
  font-family $oswaldFont
  font-size 22px
  font-weight 700
  font-style italic
  text-transform uppercase

  letter-spacing 1.02px
}